{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "source.schema.json",
  "title": "Source data and conversion options",
  "description": "Schema for the source data and conversion options",
  "version": "0.1.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {

    "source_data": {
      "title": "Source Files",
      "type": "object",
      "required": [
        "path_raw_ecephys",
        "path_processed_ecephys"
      ],
      "properties": {
        "path_raw_ecephys": {
          "type": "string",
          "format": "file",
          "description": "path to raw ecephys data file"
        },
        "path_processed_ecephys": {
          "type": "string",
          "format": "file",
          "description": "path to processed ecephys data file"
        }
      }
    },

    "conversion_options": {
      "title": "Conversion Options",
      "type": "object",
      "required": [
        "add_raw_ecephys",
        "add_processed_ecephys"
      ],
      "properties": {
        "add_raw_ecephys": {
          "type": "boolean",
          "default": true,
          "description": "convert raw ecephys data to nwb"
        },
        "add_processed_ecephys": {
          "type": "boolean",
          "default": true,
          "description": "convert processed ecephys data to nwb"
        }
      }
    }
  }
}
