{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "source.schema.json",
  "title": "Source data and conversion options",
  "description": "Schema for the source data and conversion options",
  "version": "0.1.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {

    "source_data": {
      "title": "Source Files",
      "type": "object",
      "required": [
        "path_position_tracking"
      ],
      "properties": {
        "path_position_tracking": {
          "type": "string",
          "format": "file",
          "description": "path to position tracking data file"
        }
      }
    },

    "conversion_options": {
      "title": "Conversion Options",
      "type": "object",
      "required": [
        "add_position_tracking"
      ],
      "properties": {
        "add_position_tracking": {
          "type": "boolean",
          "default": true,
          "description": "convert position tracking data to nwb"
        }
      }
    }
  }
}
